    "version": "0.2.0",
    "configurations": [
        {
            "name": "Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "8010",
            ],
            "django": true,
            "env": {
                "BETTERSTART_DB": "local",
                "BETTERSTART_DEBUG": "True",
            },
        },
        {
            "name": "Test all",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--verbosity=2",
            ],
            "django": true,
            "env": {
                "BETTERSTART_DB": "local",
                "BETTERSTART_DEBUG": "True",
            },
        },
        {
            "name": "Test selected",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "people.tests.test_views.LoginViewTest.test_failed_attempts_reset_with_otp",
                "--verbosity=2",
            ],
            "django": true,
            "env": {
                "BETTERSTART_DB": "local",
                "BETTERSTART_DEBUG": "True",
            },
        }
    ]
}
